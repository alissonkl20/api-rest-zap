{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./", // Inclui todos os arquivos no diretório atual
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types", "./src"]
  },
  "include": ["**/*.ts"], // Inclui todos os arquivos TypeScript no diretório atual e subdiretórios
  "exclude": ["node_modules"],
  "skipLibCheck": true
}